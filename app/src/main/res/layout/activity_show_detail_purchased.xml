<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="PurchaseOrderManager.ShowDetailPurchasedActivity">
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_local_police_24"/>
        <LinearLayout
            android:layout_marginLeft="13dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/ViewMarginContent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:weightSum="5"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_product_purchase"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1.3"
                android:src="@drawable/bg_adv_1"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="3.7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_name_purchase_product"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Tên sản phẩm"
                    android:textSize="21sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_type_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#2C2C2C"
                        android:text="Phân loại:"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/tv_quantity_purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="x1"
                        android:textColor="@color/black"
                        android:gravity="end|center"
                        android:layout_gravity="center|end"
                        android:textSize="19sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_price_product"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center|right"
                    android:text="30.000đ"
                    android:layout_weight="1"
                    android:textColor="#706D6D"
                    android:gravity="center|left"
                    android:textSize="21sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"
            android:background="#CFC7C7"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_total_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="30.000đ"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center|end"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            style="@style/ViewMarginContent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Liên hệ cửa hàng"
        android:textColor="@color/black"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:drawableLeft="@drawable/ic_baseline_comment_24"
        android:gravity="center"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D1CCCC"
        >
        <Button
            android:id="@+id/btn_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Hủy đơn hàng"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/ic_baseline_comment_24"
            android:gravity="center"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp" />
    </LinearLayout>

</LinearLayout>